package com.epam.cdp.volha_ivanova_task1;

public class Runner {

	int [] arr1;
		
	public static void main(String[] args) {
    int [] arr1 = new int [20];    // declare massive and its length
    int min = -10;
    int max = 10;
    int j = min;
   
   
    for (int i=0; i<arr1.length; i++) { // filling massive
    	while (j < max) { 
    		if (j!=0) {
    	arr1[i] = j;
    	j++;
    	//System.out.println(arr1[i]);
    	}  	else {j++;}
    	}
    }
    int maxNeg;
    int minPos;
    int a;
    int b;
    
    for (int i=0; i<arr1.length-1; i++) { // find maximum negative value
    	if (arr1[i] > arr1[i+1]) {
    		maxNeg = arr1[i];
    		a = i;
    	}
    	else {
    		maxNeg = arr1[i+1];
    		a = i+1;
    	}
    }
    System.out.println(maxNeg);
    for (int i=0; i<arr1.length-1; i++) { // find minimum positive value
    	if (arr1[i] > arr1[i+1]) {
    		maxNeg = arr1[i];
    		b = i;
    	}
    	else {
    		maxNeg = arr1[i+1];
    		b = i+1;
    	}
    	
	}
   
	} 
	
			   
}
	
